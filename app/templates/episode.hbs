<div class="episode" style="padding: 50px; margin: 50px;">
  {{#if model.editable}}
    {{#link-to 'edit-episode' model.id}}
      <button type='submit'>Edit Episode</button>
    {{/link-to}}
    <button {{action 'destroyEpisode' model}}>Delete Episode</button>
  {{/if}}
  <h1>{{model.title}}</h1>
  <h4>{{moment-format model.date 'MMMM YYYY'}} | {{model.why}}</h4>
  <p>{{model.description}}</p>
  <p>{{model.user.id}}</p>
</div>
