
{{new-event create='createEvent'}}
<h2 class="text-center">Your Events</h2>

{{#each model as |event|}}

{{#if (eq event.reason "I felt like I had to")}}
<div class="event-red">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{#if (eq event.reason "It was something I wanted to do")}}
<div class="event-blue">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{#if (eq event.reason "I had no control over it")}}
<div class="event-purple">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{/each}}
{{outlet}}
{{!-- </div> --}}
