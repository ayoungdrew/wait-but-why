    {{/x-select}}
  </div>
</div>

  <h5>Why?</h5>
  {{#x-select id="newReasonSelector" class="form-control" on-change=(action "setReasonSelection") as |xs|}}
    {{#xs.option}}Pick a reason{{/xs.option}}
    {{#xs.option value="It was something I wanted to do"}}It was something I wanted to do{{/xs.option}}
    {{#xs.option value="I felt like I had to"}}I felt like I had to{{/xs.option}}
    {{#xs.option value="I had no control over it"}}I had no control over it{{/xs.option}}
  {{/x-select}}
  <h5>Oh? Go on...</h5>
  {{textarea class="form-control" placeholder='Tell us more.' value=event.description}}
  <button class="btn btn-primary" style="margin-top: 5px;" type='submit'>Create</button>
</form>
</div>
</div>
