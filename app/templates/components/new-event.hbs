      {{#xs.option value="10"}}October{{/xs.option}}
      {{#xs.option value="11"}}November{{/xs.option}}
      {{#xs.option value="12"}}March{{/xs.option}}
    {{/x-select}}
  </div>
  <div class="col-xs-6">
    {{!-- {{input placeholder='e.g. 2011' value=eventYear}} --}}
