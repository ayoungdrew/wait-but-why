<h2 class="text-center">{{model.fellowUser}}'s Events</h2>
<div class="container">
  <div class="col-sm-12">
    {{!-- Sends this user's id as a param to the action --}}
          {{!-- <button class="btn btn-default" {{action 'createRelationship' model.fellowUserId}}>Follow</button>
          <button class="btn btn-default" {{action 'destroyRelationship' model.fellowUserId}}>Unfollow</button> --}}
          {{follow-buttons model=model
                           newRelationship='createRelationship'
                           deleteRelationship='destroyRelationship'
        }}
    </div>
  <div class="col-sm-6">
    {{!-- Displays all friends this user is following --}}
    <h3>{{model.fellowUser}} is Following:</h3>
    {{#each model.actRelationships as |actRelationship|}}
      <p>{{actRelationship.followed}} {{actRelationship.id}}
        {{!-- {{#if actRelationship.editable}} --}}
        <button class="btn btn-primary" type='submit' {{action 'destroyRelationship' actRelationship.id}}>Unfollow</button>
        {{!-- {{/if}} --}}
      </p>
    {{/each}}

  </div>
  <div class="col-sm-6">
    {{!-- Displays all the friends that are following this user --}}
    <h3>{{model.fellowUser}}'s Followers:</h3>
    {{#each model.passiveRelationships as |passiveRelationship|}}
    {{!-- {{if }} --}}
      <p>{{passiveRelationship.follower}} {{passiveRelationship.id}}</p>

      {{!-- {{/if}} --}}
    {{/each}}
  </div>
</div>


{{#if (lt model.posts 1)}}
<div class="container text-center">
  <div class="col-sm-8 col-sm-offset-2">
<p style="line-height: 1.6;">{{model.fellowUser}} doesn't have any posts yet.... You can help change this by spamming his or her goddamn email and peer-pressuring them into posting something here so we can scrutinize the flaws of their existence.</p>
<p style="line-height: 1.2;">Or you can do nothing at all.</p>
</div>
</div>
{{/if}}

{{#each model.posts as |event|}}

{{#if (eq event.reason "I felt like I had to")}}
<div class="event-red">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{#if (eq event.reason "It was something I wanted to do")}}
<div class="event-blue">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{#if (eq event.reason "I had no control over it")}}
<div class="event-purple" style="background: linear-gradient(to bottom right, #653161, #a24e9e, #a24e9e);">
      {{event-summary event=event
                      deleteSingleEvent='destroyEvent'
                      deleteSingleComment='destroyComment'
                      addSingleComment='createComment'
                      updateComment='updateComment'
                      refresh='refresh'
    }}
</div>
{{/if}}
{{/each}}
